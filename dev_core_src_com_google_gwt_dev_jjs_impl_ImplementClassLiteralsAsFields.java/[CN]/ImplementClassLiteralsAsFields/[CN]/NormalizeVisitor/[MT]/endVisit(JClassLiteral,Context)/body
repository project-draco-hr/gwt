{
  JType type=x.getRefType();
  if (type instanceof JArrayType) {
    JArrayType arrayType=(JArrayType)type;
    JType leafType=arrayType.getLeafType();
    JField field=resolveClassLiteralField(leafType);
    JExpression arrayClassLiteralExpression=program.createArrayClassLiteralExpression(x.getSourceInfo(),field,leafType,arrayType.getDims());
    ctx.replaceMe(arrayClassLiteralExpression);
  }
 else {
    resolveClassLiteral(x);
  }
}
