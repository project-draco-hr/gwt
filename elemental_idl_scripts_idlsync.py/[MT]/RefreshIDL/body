def RefreshIDL(url, revision):
    'Refreshes the IDL to specific WebKit url / revision.'
    cwd = os.getcwd()
    try:
        shutil.rmtree(IDL_PATH)
        os.chdir(os.path.dirname(IDL_PATH))
        RunCommand(['svn', 'export', '-r', revision, ((url + '/') + WEBCORE_SUBPATH)])
    finally:
        os.chdir(cwd)
