{
  List<String> values=property.getValues();
  if (values.size() > 1) {
    logger.log(Type.ERROR,"The configuration property " + property.getName() + " is used in "+ "a conditional css and cannot be a multi-valued property");
    return false;
  }
  String value=values.get(0);
  if (!"true".equals(value) && !"false".equals(value)) {
    logger.log(Type.ERROR,"The configuration property " + property.getName() + " is used in "+ "a conditional css. Its value must be either \"true\" or \"false\"");
    return false;
  }
  return true;
}
