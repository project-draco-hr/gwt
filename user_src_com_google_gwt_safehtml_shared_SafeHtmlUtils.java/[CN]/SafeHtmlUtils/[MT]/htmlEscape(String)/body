{
  if (s.indexOf("&") != -1) {
    s=AMP_RE.replace(s,"&amp;");
  }
  if (s.indexOf("<") != -1) {
    s=LT_RE.replace(s,"&lt;");
  }
  if (s.indexOf(">") != -1) {
    s=GT_RE.replace(s,"&gt;");
  }
  if (s.indexOf("\"") != -1) {
    s=QUOT_RE.replace(s,"&quot;");
  }
  if (s.indexOf("'") != -1) {
    s=SQUOT_RE.replace(s,"&#39;");
  }
  return s;
}
