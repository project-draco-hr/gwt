{
  CheckBox cb=new CheckBox("Foo");
  cb.setChecked(true);
  cb.addClickListener(new ClickListener(){
    public void onClick(    Widget sender){
      boolean checked=((CheckBox)sender).isChecked();
      Window.alert("It is " + (checked ? "" : "not") + "checked");
    }
  }
);
  RootPanel.get().add(cb);
}
