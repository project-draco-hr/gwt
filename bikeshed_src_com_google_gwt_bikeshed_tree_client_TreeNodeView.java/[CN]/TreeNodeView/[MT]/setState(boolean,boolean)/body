{
  if (this.open == open) {
    return;
  }
  this.animate=true;
  this.open=open;
  if (open) {
    if (!nodeInfoLoaded) {
      nodeInfo=tree.getTreeViewModel().getNodeInfo(getValue(),this);
      nodeInfoLoaded=true;
    }
    preOpen();
    if (nodeInfo != null) {
      onOpen(nodeInfo);
    }
  }
 else {
    cleanup();
    postClose();
  }
  updateImage();
}
