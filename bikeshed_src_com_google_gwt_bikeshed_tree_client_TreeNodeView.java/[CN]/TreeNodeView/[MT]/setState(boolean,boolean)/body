{
  if (this.open == open) {
    return;
  }
  this.animate=true;
  this.open=open;
  if (open) {
    if (!nodeInfoLoaded) {
      nodeInfo=tree.getTreeViewModel().getNodeInfo(value,this);
      nodeInfoLoaded=true;
    }
    if (nodeInfo != null) {
      onOpen(nodeInfo);
    }
  }
 else {
    cleanup();
    tree.maybeAnimateTreeNode(this);
  }
  updateImage();
}
