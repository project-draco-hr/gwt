{
synchronized (clientStatusesLock) {
    StringBuilder buf=new StringBuilder();
    int itemCount=0;
    for (    ClientStatus clientStatus : clientStatuses.values()) {
      if (clientStatus.hasRequestedCurrentTest && clientStatus.currentTestResults == null) {
        if (itemCount > 0) {
          buf.append(", ");
        }
        buf.append(clientStatus.clientId);
        ++itemCount;
      }
    }
    int difference=numClients - itemCount;
    if (difference > 0) {
      if (itemCount > 0) {
        buf.append('\n');
      }
      buf.append(difference + " other client(s) haven't responded back to JUnitShell since the start of the test.");
    }
    return buf.toString();
  }
}
