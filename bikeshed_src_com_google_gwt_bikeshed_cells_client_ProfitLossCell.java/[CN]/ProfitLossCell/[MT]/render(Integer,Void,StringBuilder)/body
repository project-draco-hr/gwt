{
  boolean negative=priceDelta < 0;
  if (negative) {
    priceDelta=-priceDelta;
  }
  int dollars=priceDelta / 100;
  int cents=priceDelta % 100;
  sb.append("<span style=\"color:");
  if (priceDelta == 0) {
    sb.append("green\">  ");
  }
 else   if (negative) {
    sb.append("red\">-");
  }
 else {
    sb.append("green\">+");
  }
  sb.append("$");
  sb.append(dollars);
  sb.append('.');
  if (cents < 10) {
    sb.append('0');
  }
  sb.append(cents);
  sb.append("</span>");
}
