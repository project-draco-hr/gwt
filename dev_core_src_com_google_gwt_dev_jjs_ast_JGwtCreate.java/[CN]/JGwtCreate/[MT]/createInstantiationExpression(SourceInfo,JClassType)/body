{
  JConstructor noArgCtor=null;
  for (  JMethod ctor : classType.getMethods()) {
    if (ctor instanceof JConstructor) {
      if (ctor.getOriginalParamTypes().size() == 0) {
        noArgCtor=(JConstructor)ctor;
        break;
      }
    }
  }
  if (noArgCtor == null) {
    return null;
  }
  return new JNewInstance(info,noArgCtor);
}
