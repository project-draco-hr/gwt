{
  if (insideMediaAtRule) {
    if (lenient) {
      treeLogger.log(Type.WARN,"A " + atRule + " is not allowed inside a @media at-rule."+ "The following "+ atRule+ " ["+ def+ "] will be moved in the upper scope");
      wrongDefNodes.add(def);
      return false;
    }
 else {
      treeLogger.log(Type.ERROR,"A " + atRule + " is not allowed inside a @media at-rule. ["+ def+ "]");
      throw new Css2GssConversionException("A " + atRule + " is not allowed inside a @media "+ "at-rule.");
    }
  }
  return true;
}
