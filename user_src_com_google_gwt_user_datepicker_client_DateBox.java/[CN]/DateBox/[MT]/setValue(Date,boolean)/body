{
  Date oldDate=getValue();
  if (date == null) {
    picker.setValue(null);
    box.setText("");
  }
 else {
    picker.setValue(date,false);
    picker.setCurrentMonth(date);
    setDate(date);
  }
  invalidDateReporter.clearError();
  if (fireEvents) {
    DateChangeEvent.fireIfNotEqualDates(this,oldDate,date);
  }
}
