{
  if (item == root) {
    return;
  }
  if (curSelection != null) {
    curSelection.setSelected(false);
  }
  curSelection=item;
  if (moveFocus && curSelection != null) {
    moveFocus();
    curSelection.setSelected(true);
    if (fireEvents && (listeners != null)) {
      listeners.fireItemSelected(curSelection);
    }
  }
}
