{
  if (isPlaceholder) {
    return template.imagePlaceholder(direction,res.getWidth());
  }
 else {
    String vert=valign == HasVerticalAlignment.ALIGN_MIDDLE ? "center" : valign.getVerticalAlignString();
    return SafeHtmlUtils.fromTrustedString("<div style=\"position:absolute;" + direction + ":0px;top:0px;height:100%;width:"+ res.getWidth()+ "px;background:url('"+ res.getURL()+ "') no-repeat scroll "+ SafeHtmlUtils.htmlEscape(vert)+ " center transparent;\"></div>");
  }
}
