{
  final RichTextArea richTextArea=new RichTextArea();
  RootPanel.get().add(richTextArea);
  richTextArea.setHTML("<b>foo</b>");
  assertEquals("<b>foo</b>",richTextArea.getHTML().toLowerCase());
  new Timer(){
    public void run(){
      assertEquals("<b>foo</b>",richTextArea.getHTML().toLowerCase());
      finishTest();
    }
  }
.schedule(200);
  delayTestFinish(1000);
}
