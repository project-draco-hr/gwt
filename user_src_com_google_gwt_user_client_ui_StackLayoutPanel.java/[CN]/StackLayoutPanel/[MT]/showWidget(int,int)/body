{
  checkIndex(index);
  if (index == selectedIndex) {
    return;
  }
  BeforeSelectionEvent<Integer> event=BeforeSelectionEvent.fire(this,index);
  if ((event != null) && event.isCanceled()) {
    return;
  }
  selectedIndex=index;
  if (isAttached()) {
    animate(duration);
  }
  SelectionEvent.fire(this,index);
}
