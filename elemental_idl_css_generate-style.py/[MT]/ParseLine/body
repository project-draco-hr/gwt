def ParseLine(line):
    'Parses a line of the input file into useful parameters.'
    bits = re.compile('\\s+').split(line)
    if (len(bits) == 1):
        output_mode = 'simple'
        value_type = 'String'
    elif (bits[1] == 'enum'):
        output_mode = 'enum'
        value_type = 'String'
    elif (bits[1] == 'dim'):
        output_mode = 'dim'
        value_type = 'String'
    else:
        output_mode = 'simple'
        value_type = bits[1]
    css_prop_name = bits[0]
    additional_params = bits[2:]
    return (css_prop_name, output_mode, value_type, additional_params)
