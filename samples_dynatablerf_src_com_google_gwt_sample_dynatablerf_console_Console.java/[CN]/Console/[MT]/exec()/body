{
  rf.schoolCalendarRequest().getPeople(0,100,Arrays.asList(true,true,true,true,true,true,true)).with("address").fire(new Receiver<List<PersonProxy>>(){
    @Override public void onSuccess(    List<PersonProxy> response){
      for (      PersonProxy person : response) {
        AddressProxy address=person.getAddress();
        String addressBlob=address.getStreet() + " " + address.getCity()+ " "+ address.getState()+ " "+ address.getZip();
        System.out.printf("%-40s%40s\n%80s\n\n",person.getName(),person.getDescription(),addressBlob);
      }
    }
  }
);
}
