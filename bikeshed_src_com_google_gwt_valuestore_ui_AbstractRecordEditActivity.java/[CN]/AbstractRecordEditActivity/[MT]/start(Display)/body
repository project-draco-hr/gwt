{
  Receiver<R> callback=new Receiver<R>(){
    public void onSuccess(    R record){
      if (dead) {
        return;
      }
      view.setEnabled(true);
      view.setValue(record);
      view.showErrors(null);
      display.showActivityWidget(view);
    }
  }
;
  fireFindRequest(Value.of(id),callback);
}
