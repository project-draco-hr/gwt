{
  JExpression lhs=x.getTestExpr();
  String methodName="Exceptions.throwAssertionError" + getAssertMethodSuffix(x.getArg());
  JMethod method=program.getIndexedMethod(methodName);
  JMethodCall rhs=new JMethodCall(program,x.getSourceInfo(),null,method);
  if (x.getArg() != null) {
    rhs.getArgs().add(x.getArg());
  }
  JBinaryOperation binOp=new JBinaryOperation(program,x.getSourceInfo(),program.getTypePrimitiveBoolean(),JBinaryOperator.OR,lhs,rhs);
  ctx.replaceMe(binOp.makeStatement());
}
