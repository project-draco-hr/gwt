{
  long start=System.currentTimeMillis();
  for (  Task task : nested) {
    task.perform();
  }
  long duration=(System.currentTimeMillis() - start);
  long hrs=duration / MS_IN_HOUR;
  long min=(duration - (hrs * MS_IN_HOUR)) / MS_IN_MINUTE;
  double sec=(duration - (hrs * MS_IN_HOUR) - (min * MS_IN_MINUTE)) / MS_IN_SECOND_FLOAT;
  log("timer " + name + " timed "+ duration+ " ms. ("+ hrs+ ":"+ (min < 10 ? "0" : "")+ min+ ":"+ sec+ ")");
}
