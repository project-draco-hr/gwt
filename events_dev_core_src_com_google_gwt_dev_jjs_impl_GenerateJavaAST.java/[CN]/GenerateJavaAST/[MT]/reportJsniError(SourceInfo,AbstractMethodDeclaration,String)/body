{
  CompilationResult compResult=methodDeclaration.compilationResult();
  int startColumn=Util.searchColumnNumber(compResult.getLineSeparatorPositions(),info.getStartLine(),info.getStartPos());
  DefaultProblem problem=new DefaultProblem(info.getFileName().toCharArray(),message,IProblem.ExternalProblemNotFixable,null,ProblemSeverities.Error,info.getStartPos(),info.getEndPos(),info.getStartLine(),startColumn);
  compResult.record(problem,methodDeclaration);
}
