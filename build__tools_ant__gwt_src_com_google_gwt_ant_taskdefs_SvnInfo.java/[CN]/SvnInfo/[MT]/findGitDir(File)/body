{
  String gitDirPath=System.getenv("GIT_DIR");
  if (gitDirPath != null) {
    File gitDir=new File(gitDirPath).getAbsoluteFile();
    if (gitDir.isDirectory()) {
      return gitDir;
    }
  }
  dir=dir.getAbsoluteFile();
  while (dir != null) {
    File gitDir=new File(dir,".git");
    if (gitDir.isDirectory()) {
      return gitDir;
    }
    dir=dir.getParentFile();
  }
  return null;
}
