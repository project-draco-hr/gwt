{
  IOUtils.checkOffsetAndCount(buffer,byteOffset,byteCount);
  for (int i=0; i < byteCount; ++i) {
    int c;
    try {
      if ((c=read()) == -1) {
        return i == 0 ? -1 : i;
      }
    }
 catch (    IOException e) {
      if (i != 0) {
        return i;
      }
      throw e;
    }
    buffer[byteOffset + i]=(byte)c;
  }
  return byteCount;
}
