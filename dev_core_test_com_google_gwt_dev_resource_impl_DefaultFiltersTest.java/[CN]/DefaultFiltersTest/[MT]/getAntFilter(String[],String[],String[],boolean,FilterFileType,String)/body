{
  final ZipScanner scanner=DefaultFilters.getScanner(includes,excludes,skips,defaultExcludes,true);
  return new ResourceFilterString(new ResourceFilter(){
    @Override public boolean allows(    String path){
      return fileTypeMatches(filterFileType,path) && scanner.match(path);
    }
  }
,tag != null ? tag : "includes: " + Arrays.toString(includes) + ", excludes: "+ Arrays.toString(excludes));
}
