{
  String str;
  str=NumberFormat.getFormat("#,###").format(1234567890);
  assertTrue(str.equals("1\u00a0234\u00a0567\u00a0890"));
  str=NumberFormat.getFormat("#,####").format(1234567890);
  assertTrue(str.equals("12\u00a03456\u00a07890"));
  str=NumberFormat.getFormat("#").format(1234567890);
  assertTrue(str.equals("1234567890"));
}
