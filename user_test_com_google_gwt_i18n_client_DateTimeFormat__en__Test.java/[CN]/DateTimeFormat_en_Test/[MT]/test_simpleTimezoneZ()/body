{
  TimeZone simpleTimeZone=TimeZone.createTimeZone(420);
  Date date=new Date();
  date.setTime(Date.UTC(2006 - 1900,6,27,13,10,10));
  assertEquals("07/27/2006 06:10:10 -0700",DateTimeFormat.getFormat("MM/dd/yyyy HH:mm:ss Z").format(date,simpleTimeZone));
  assertEquals("07/27/2006 06:10:10 -0700",DateTimeFormat.getFormat("MM/dd/yyyy HH:mm:ss ZZ").format(date,simpleTimeZone));
  assertEquals("07/27/2006 06:10:10 -07:00",DateTimeFormat.getFormat("MM/dd/yyyy HH:mm:ss ZZZ").format(date,simpleTimeZone));
  assertEquals("07/27/2006 06:10:10 GMT-07:00",DateTimeFormat.getFormat("MM/dd/yyyy HH:mm:ss ZZZZ").format(date,simpleTimeZone));
}
