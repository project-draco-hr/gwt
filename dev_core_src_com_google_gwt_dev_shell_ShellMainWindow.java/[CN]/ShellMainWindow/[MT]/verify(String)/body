{
  char[] in=hash.toCharArray();
  char[] ou=new char[in.length];
  for (int i=0, c=0; i < in.length; ++i) {
    if (in[i] < 'a') {
      c+=in[i] - 'A';
    }
 else {
      c+=in[i] - 'a' - 26;
    }
    if (c == 0) {
      ou[i]=' ';
    }
 else {
      ou[i]=(char)('@' + c);
    }
  }
  return String.valueOf(ou);
}
