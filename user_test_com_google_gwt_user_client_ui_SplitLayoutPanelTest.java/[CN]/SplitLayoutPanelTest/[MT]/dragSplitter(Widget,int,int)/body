{
  NativeEvent mouseDown=Document.get().createMouseDownEvent(0,0,0,0,0,false,false,false,false,NativeEvent.BUTTON_LEFT);
  splitter.getElement().dispatchEvent(mouseDown);
  NativeEvent mouseMove=Document.get().createMouseMoveEvent(0,offsetX,offsetY,offsetX,offsetY,false,false,false,false,NativeEvent.BUTTON_LEFT);
  splitter.getElement().dispatchEvent(mouseMove);
  NativeEvent mouseUp=Document.get().createMouseUpEvent(0,offsetX,offsetY,offsetX,offsetY,false,false,false,false,NativeEvent.BUTTON_LEFT);
  splitter.getElement().dispatchEvent(mouseUp);
}
