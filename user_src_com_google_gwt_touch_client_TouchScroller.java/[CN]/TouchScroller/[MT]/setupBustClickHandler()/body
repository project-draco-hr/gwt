{
  removeBustClickHandler();
  bustClickHandlerReg=Event.addNativePreviewHandler(new NativePreviewHandler(){
    @Override public void onPreviewNativeEvent(    NativePreviewEvent event){
      if (Event.ONCLICK == event.getTypeInt()) {
        Point clickPoint=new Point(event.getNativeEvent().getClientX(),event.getNativeEvent().getClientY());
        if (isClickScrollTriggeringTouch(clickPoint) || isClickTouchPositionDuringMomentum(clickPoint)) {
          event.cancel();
          event.getNativeEvent().stopPropagation();
          event.getNativeEvent().preventDefault();
        }
      }
    }
  }
);
}
