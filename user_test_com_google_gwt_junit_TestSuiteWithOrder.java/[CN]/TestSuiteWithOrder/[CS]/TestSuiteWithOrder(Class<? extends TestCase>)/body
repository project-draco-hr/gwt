{
  super(clazz.getName());
  for (Class<?> c=clazz; Test.class.isAssignableFrom(c); c=c.getSuperclass()) {
    for (    Method each : getDeclaredMethods(c)) {
      if (isTestMethod(each)) {
        addTestMethod(each,clazz);
      }
    }
  }
  if (countTestCases() == 0) {
    addTest(warning("No tests found in " + clazz.getName()));
  }
}
