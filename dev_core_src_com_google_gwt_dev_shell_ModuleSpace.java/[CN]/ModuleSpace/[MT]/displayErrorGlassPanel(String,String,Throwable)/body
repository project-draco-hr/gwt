{
  StringWriter writer=new StringWriter();
  e.printStackTrace(new PrintWriter(writer));
  String stackTrace=writer.toString().replaceFirst("(?ms)(Caused by:.+)","<b>$1</b>");
  String details="<p>Exception while loading module <b>" + entryPointTypeName + "</b>. See Development Mode for details.</p>"+ "<div style='overflow:visisble;white-space:pre;'>"+ stackTrace+ "</div>";
  invokeNativeVoid("__gwt_displayGlassMessage",null,new Class[]{String.class,String.class},new Object[]{summary,details});
}
