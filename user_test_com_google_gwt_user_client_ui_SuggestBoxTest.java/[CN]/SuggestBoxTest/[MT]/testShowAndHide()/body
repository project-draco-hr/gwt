{
  SuggestBox box=createSuggestBox();
  assertFalse(box.isSuggestionListShowing());
  box.showSuggestionList();
  assertFalse(box.isSuggestionListShowing());
  RootPanel.get().add(box);
  assertFalse(box.isSuggestionListShowing());
  box.hideSuggestionList();
  box.showSuggestionList();
  assertFalse(box.isSuggestionListShowing());
  box.setText("t");
  box.showSuggestionList();
  assertTrue(box.isSuggestionListShowing());
  box.hideSuggestionList();
  assertFalse(box.isSuggestionListShowing());
}
