{
  CompilationResult compResult=methodDeclaration.compilationResult();
  ICompilationUnit compUnit=compResult.getCompilationUnit();
  offsetFromStart+=methodDeclaration.bodyStart;
  DefaultProblem problem=new DefaultProblem(compUnit.getFileName(),message,IProblem.Unclassified,null,ProblemSeverities.Error,offsetFromStart,offsetFromStart,ProblemHandler.searchLineNumber(compResult.lineSeparatorPositions,offsetFromStart));
  compResult.record(problem,methodDeclaration);
}
