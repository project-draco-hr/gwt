{
  int startLine=Util.getLineNumber(x.sourceStart,currentSeparatorPositions,0,currentSeparatorPositions.length - 1);
  SourceInfo toReturn=program.createSourceInfo(x.sourceStart,x.sourceEnd,startLine,currentFileName);
  if (currentClass != null) {
    toReturn.addCorrelation(Correlation.by(currentClass));
  }
  if (currentMethod != null) {
    toReturn.addCorrelation(Correlation.by(currentMethod));
  }
  return toReturn;
}
