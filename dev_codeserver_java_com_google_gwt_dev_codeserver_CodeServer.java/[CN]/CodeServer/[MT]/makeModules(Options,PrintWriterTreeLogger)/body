{
  File workDir=ensureWorkDir(options);
  System.out.println("workDir: " + workDir);
  Modules modules=new Modules();
  for (  String moduleName : options.getModuleNames()) {
    AppSpace appSpace=AppSpace.create(new File(workDir,moduleName));
    Recompiler recompiler=new Recompiler(appSpace,moduleName,options.getSourcePath(),options.getPreferredHost() + ":" + options.getPort(),options.getRecompileListener(),options.isCompileTest(),logger);
    modules.addModuleState(new ModuleState(recompiler,logger,options.getNoPrecompile()));
  }
  return modules;
}
