{
  Options options=new Options();
  if (!options.parseArgs(args)) {
    System.exit(1);
  }
  try {
    start(options);
    System.out.println();
    System.out.println("The code server is ready.");
    System.out.println("Next, visit: http://localhost:" + options.getPort() + "/");
  }
 catch (  Throwable t) {
    t.printStackTrace();
    System.exit(1);
  }
}
