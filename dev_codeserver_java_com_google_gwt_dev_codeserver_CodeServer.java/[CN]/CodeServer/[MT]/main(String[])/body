{
  Options options=new Options();
  if (!options.parseArgs(args)) {
    System.exit(1);
  }
  try {
    start(options);
    String url="http://" + options.getPreferredHost() + ":"+ options.getPort()+ "/";
    System.out.println();
    System.out.println("The code server is ready.");
    System.out.println("Next, visit: " + url);
  }
 catch (  Throwable t) {
    t.printStackTrace();
    System.exit(1);
  }
}
