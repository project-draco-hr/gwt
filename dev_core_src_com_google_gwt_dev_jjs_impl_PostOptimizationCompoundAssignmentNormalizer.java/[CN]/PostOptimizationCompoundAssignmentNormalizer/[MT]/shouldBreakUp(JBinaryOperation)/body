{
  if (x.getType() == program.getTypePrimitiveLong()) {
    return true;
  }
  if (x.getOp() == JBinaryOperator.ASG_DIV && x.getType() != program.getTypePrimitiveFloat() && x.getType() != program.getTypePrimitiveDouble()) {
    return true;
  }
  JType lhsType=x.getLhs().getType();
  JType rhsType=x.getRhs().getType();
  if (isIntegral(lhsType) && !isIntegral(rhsType)) {
    return true;
  }
  return false;
}
