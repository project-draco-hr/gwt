{
  Validator validator=TestUtil.getValidatorUnderTest();
  PatternDummyEntity dummy=new PatternDummyEntity();
  Set<ConstraintViolation<PatternDummyEntity>> constraintViolations=validator.validate(dummy);
  assertCorrectNumberOfViolations(constraintViolations,0);
  dummy.pattern="ab cd";
  constraintViolations=validator.validate(dummy);
  assertCorrectNumberOfViolations(constraintViolations,1);
  assertConstraintViolation(constraintViolations.iterator().next(),PatternDummyEntity.class,"ab cd","pattern");
  dummy.pattern="wc 00";
  constraintViolations=validator.validate(dummy);
  assertCorrectNumberOfViolations(constraintViolations,0);
}
