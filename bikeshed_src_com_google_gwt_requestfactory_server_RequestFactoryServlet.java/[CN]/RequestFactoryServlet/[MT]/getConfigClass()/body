{
  try {
    final String serverOperation=getServletContext().getInitParameter(SERVER_OPERATION_CONTEXT_PARAM);
    if (null == serverOperation) {
      throw new IllegalStateException(String.format("Context parameter \"%s\" must name an enum implementing %s",SERVER_OPERATION_CONTEXT_PARAM,RequestDefinition.class.getName()));
    }
    Class<?> clazz=Class.forName(serverOperation);
    if (!RequestDefinition.class.isAssignableFrom(clazz)) {
      throw new RuntimeException(serverOperation + " must implement " + RequestDefinition.class.getName());
    }
    return (Class<? extends RequestDefinition>)clazz;
  }
 catch (  ClassNotFoundException e) {
    throw new RuntimeException(e);
  }
}
