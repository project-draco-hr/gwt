{
  Object sender=event.getSource();
  if (sender == olderButton) {
    startIndex+=VISIBLE_EMAIL_COUNT;
    if (startIndex >= MailItems.getMailItemCount()) {
      startIndex-=VISIBLE_EMAIL_COUNT;
    }
 else {
      styleRow(selectedRow,false);
      selectedRow=-1;
      update();
    }
  }
 else   if (sender == newerButton) {
    startIndex-=VISIBLE_EMAIL_COUNT;
    if (startIndex < 0) {
      startIndex=0;
    }
 else {
      styleRow(selectedRow,false);
      selectedRow=-1;
      update();
    }
  }
}
