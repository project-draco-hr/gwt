{
  StringBuilder sb=new StringBuilder();
  sb.append(type.getLabel());
  sb.append(": ");
  if (getMessage() != null) {
    sb.append(getMessage());
  }
 else {
    sb.append("like " + getMessagePattern().pattern());
  }
  Class<? extends Throwable> t=getCaught();
  if (t != null) {
    sb.append("; ");
    sb.append(t.getName());
  }
  return sb.toString();
}
