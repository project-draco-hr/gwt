{
  Thread keepAliveThread=new Thread(){
    @Override public void run(){
      do {
        try {
          Thread.sleep(1000);
        }
 catch (        InterruptedException ignored) {
        }
      }
 while (doKeepAlives());
    }
  }
;
  keepAliveThread.setDaemon(true);
  keepAliveThread.start();
}
