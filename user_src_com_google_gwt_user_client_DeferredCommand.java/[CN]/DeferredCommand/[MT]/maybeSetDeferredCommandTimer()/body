{
  if (!timerIsActive && !deferredCommands.isEmpty()) {
    new Timer(){
      public void run(){
        try {
          flushDeferredCommands();
        }
  finally {
          timerIsActive=false;
          maybeSetDeferredCommandTimer();
        }
      }
    }
.schedule(1);
    timerIsActive=true;
  }
}
