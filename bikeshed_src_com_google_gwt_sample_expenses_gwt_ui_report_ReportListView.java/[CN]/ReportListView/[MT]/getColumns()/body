{
  List<PropertyColumn<ReportRecord,?>> columns=new ArrayList<PropertyColumn<ReportRecord,?>>();
  columns.add(new PropertyColumn<ReportRecord,Date>(ReportRecord.created,new DateTimeFormatRenderer(DateTimeFormat.getShortDateFormat())));
  columns.add(PropertyColumn.<ReportRecord>getStringPropertyColumn(ReportRecord.purpose));
  columns.add(new PropertyColumn<ReportRecord,EmployeeRecord>(ReportRecord.reporter,EmployeeRenderer.instance()));
  columns.add(new PropertyColumn<ReportRecord,EmployeeRecord>(ReportRecord.approvedSupervisor,EmployeeRenderer.instance()));
  return columns;
}
