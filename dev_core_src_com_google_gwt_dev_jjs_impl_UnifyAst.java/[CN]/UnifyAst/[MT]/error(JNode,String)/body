{
  errorsFound=true;
  TreeLogger branch=logger.branch(TreeLogger.ERROR,"Errors in '" + x.getSourceInfo().getFileName() + "'",null);
  StringBuilder msgBuf=new StringBuilder();
  int line=x.getSourceInfo().getStartLine();
  if (line > 0) {
    msgBuf.append("Line ");
    msgBuf.append(line);
    msgBuf.append(": ");
  }
  msgBuf.append(errorMessage);
  branch.log(TreeLogger.ERROR,msgBuf.toString());
}
