{
  assertEquals("unicodeWrap(String)",RLE + he + PDF+ LRM,ltrFormatter.unicodeWrap(he));
  assertEquals("unicodeWrap(String, boolean)",RLE + he + longHtmlTag+ PDF+ LRM,ltrFormatter.unicodeWrap(he + longHtmlTag,true));
  assertEquals("unicodeWrap(String, boolean, boolean)",RLE + he + longHtmlTag+ PDF,ltrFormatter.unicodeWrap(he + longHtmlTag,true,false));
}
