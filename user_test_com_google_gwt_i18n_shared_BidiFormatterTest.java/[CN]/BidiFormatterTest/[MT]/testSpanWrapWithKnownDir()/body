{
  assertEquals("spanWrapWithKnownDir(Direction, String)","<span dir=rtl>" + en + "&lt;</span>"+ LRM,ltrFormatter.spanWrapWithKnownDir(RTL,en + "<"));
  assertEquals("spanWrapWithKnownDir(Direction, String, boolean)","<span dir=rtl>" + en + longHtmlTag+ "</span>"+ LRM,ltrFormatter.spanWrapWithKnownDir(RTL,en + longHtmlTag,true));
  assertEquals("spanWrapWithKnownDir(Direction, String, boolean, boolean)","<span dir=rtl>" + en + longHtmlTag+ "</span>",ltrFormatter.spanWrapWithKnownDir(RTL,en + longHtmlTag,true,false));
}
