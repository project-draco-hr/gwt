{
  int low=(int)(value & 0xffffffff);
  int high=(int)(value >> 32);
  StringBuilder sb=new StringBuilder();
  if (quote) {
    sb.append('\'');
  }
  haveNonZero=false;
  base64Append(sb,(high >> 28) & 0xf);
  base64Append(sb,(high >> 22) & 0x3f);
  base64Append(sb,(high >> 16) & 0x3f);
  base64Append(sb,(high >> 10) & 0x3f);
  base64Append(sb,(high >> 4) & 0x3f);
  int v=((high & 0xf) << 2) | ((low >> 30) & 0x3);
  base64Append(sb,v);
  base64Append(sb,(low >> 24) & 0x3f);
  base64Append(sb,(low >> 18) & 0x3f);
  base64Append(sb,(low >> 12) & 0x3f);
  base64Append(sb,(low >> 6) & 0x3f);
  haveNonZero=true;
  base64Append(sb,low & 0x3f);
  if (quote) {
    sb.append('\'');
  }
  return sb.toString();
}
