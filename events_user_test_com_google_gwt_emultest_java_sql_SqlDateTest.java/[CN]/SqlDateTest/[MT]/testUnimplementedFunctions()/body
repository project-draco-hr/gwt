{
  Date d=new Date(0);
  try {
    d.getHours();
    fail("Should have thrown IllegalArgumentException");
  }
 catch (  IllegalArgumentException e) {
  }
  try {
    d.getMinutes();
    fail("Should have thrown IllegalArgumentException");
  }
 catch (  IllegalArgumentException e) {
  }
  try {
    d.getSeconds();
    fail("Should have thrown IllegalArgumentException");
  }
 catch (  IllegalArgumentException e) {
  }
  try {
    d.setHours(0);
    fail("Should have thrown IllegalArgumentException");
  }
 catch (  IllegalArgumentException e) {
  }
  try {
    d.setMinutes(0);
    fail("Should have thrown IllegalArgumentException");
  }
 catch (  IllegalArgumentException e) {
  }
  try {
    d.setSeconds(0);
    fail("Should have thrown IllegalArgumentException");
  }
 catch (  IllegalArgumentException e) {
  }
}
