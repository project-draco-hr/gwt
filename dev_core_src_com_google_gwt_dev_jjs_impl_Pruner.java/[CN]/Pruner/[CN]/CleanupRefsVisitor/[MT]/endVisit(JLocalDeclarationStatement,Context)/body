{
  if (!referencedNonTypes.contains(x.getLocalRef().getTarget())) {
    if (x.getInitializer() != null) {
      ctx.replaceMe(x.getInitializer().makeStatement());
    }
 else {
      if (ctx.canRemove()) {
        ctx.removeMe();
      }
 else {
        ctx.replaceMe(new JBlock(program,x.getSourceInfo()));
      }
    }
  }
}
