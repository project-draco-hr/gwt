{
  if (value.equals("auto")) {
    options.setCodeServerPort(getFreeSocketPort());
  }
 else {
    try {
      options.setCodeServerPort(Integer.parseInt(value));
    }
 catch (    NumberFormatException e) {
      System.err.println("A port must be an integer or \"auto\"");
      return false;
    }
  }
  return true;
}
