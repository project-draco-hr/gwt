{
  if (!runSettings)   return false;
  runSettings=false;
  initializeInsets();
  sendEvent(SWT.Settings,null);
  Shell[] shells=getShells();
  for (int i=0; i < shells.length; i++) {
    Shell shell=shells[i];
    if (!shell.isDisposed()) {
      shell.redraw(true);
      shell.layout(true,true);
    }
  }
  return true;
}
