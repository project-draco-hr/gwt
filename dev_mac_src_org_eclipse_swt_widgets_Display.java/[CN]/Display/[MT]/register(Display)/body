{
  for (int i=0; i < Displays.length; i++) {
    if (Displays[i] == null) {
      Displays[i]=display;
      return;
    }
  }
  Display[] newDisplays=new Display[Displays.length + 4];
  System.arraycopy(Displays,0,newDisplays,0,Displays.length);
  newDisplays[Displays.length]=display;
  Displays=newDisplays;
}
