{
  JMethodCall call;
  JField field=x.getField();
  if (field.isStatic() && !field.isCompileTimeConstant() && program.typeOracle.checkClinit(currentClass,field.getEnclosingType())) {
    JMethod clinit=field.getEnclosingType().methods.get(0);
    assert(JProgram.isClinit(clinit));
    call=new JMethodCall(program,x.getSourceInfo(),null,clinit);
  }
 else {
    call=null;
  }
  return call;
}
