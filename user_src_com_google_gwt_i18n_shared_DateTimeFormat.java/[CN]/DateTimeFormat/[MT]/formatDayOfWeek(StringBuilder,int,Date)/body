{
  @SuppressWarnings("deprecation") int value=date.getDay();
  if (count == 5) {
    buf.append(dateTimeFormatInfo.weekdaysNarrow()[value]);
  }
 else   if (count == 4) {
    buf.append(dateTimeFormatInfo.weekdaysFull()[value]);
  }
 else {
    buf.append(dateTimeFormatInfo.weekdaysShort()[value]);
  }
}
