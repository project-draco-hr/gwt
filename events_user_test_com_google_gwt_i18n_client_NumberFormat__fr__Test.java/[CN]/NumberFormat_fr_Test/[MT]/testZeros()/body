{
  String str;
  str=NumberFormat.getFormat("#.#").format(0);
  assertEquals("0",str);
  str=NumberFormat.getFormat("#.").format(0);
  assertEquals("0,",str);
  str=NumberFormat.getFormat(".#").format(0);
  assertEquals(",0",str);
  str=NumberFormat.getFormat("#").format(0);
  assertEquals("0",str);
  str=NumberFormat.getFormat("#0.#").format(0);
  assertEquals("0",str);
  str=NumberFormat.getFormat("#0.").format(0);
  assertEquals("0,",str);
  str=NumberFormat.getFormat("#.0").format(0);
  assertEquals(",0",str);
  str=NumberFormat.getFormat("#").format(0);
  assertEquals("0",str);
}
