{
  SelectChannelConnector connector=new SelectChannelConnector();
  connector.setHost(bindAddress);
  connector.setPort(port);
  connector.setReuseAddress(false);
  connector.setSoLingerTime(0);
  Server server=new Server();
  server.addConnector(connector);
  server.addHandler(new AbstractHandler(){
    @Override public void handle(    String target,    HttpServletRequest request,    HttpServletResponse response,    int port) throws IOException {
      handleRequest(target,request,response);
    }
  }
);
  try {
    server.start();
  }
 catch (  Exception e) {
    logger.log(TreeLogger.ERROR,"cannot start web server",e);
    throw new UnableToCompleteException();
  }
  this.server=server;
}
