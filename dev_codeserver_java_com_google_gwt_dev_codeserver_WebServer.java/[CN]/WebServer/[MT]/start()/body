{
  SelectChannelConnector connector=new SelectChannelConnector();
  connector.setHost(bindAddress);
  connector.setPort(port);
  connector.setReuseAddress(false);
  connector.setSoLingerTime(0);
  Server server=new Server();
  server.addConnector(connector);
  ServletHandler servletHandler=new ServletHandler();
  servletHandler.addServletWithMapping(new ServletHolder(new HttpServlet(){
    @Override protected void doGet(    HttpServletRequest request,    HttpServletResponse response) throws ServletException, IOException {
      handleRequest(request.getPathInfo(),request,response);
    }
  }
),"/*");
  servletHandler.addFilterWithMapping(new FilterHolder(GzipFilter.class),"/*",AbstractHandler.DEFAULT);
  server.addHandler(servletHandler);
  try {
    server.start();
  }
 catch (  Exception e) {
    logger.log(TreeLogger.ERROR,"cannot start web server",e);
    throw new UnableToCompleteException();
  }
  this.server=server;
}
