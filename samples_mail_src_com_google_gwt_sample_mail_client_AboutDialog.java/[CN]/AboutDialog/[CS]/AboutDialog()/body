{
  setText("About the Mail Sample");
  VerticalPanel outer=new VerticalPanel();
  HTML text=new HTML("This sample application demonstrates the " + "construction of a complex user interface using GWT's built-in " + "widgets.  Have a look at the code to see how easy it is to build "+ "your own apps!");
  text.setStyleName("mail-AboutText");
  outer.add(text);
  outer.add(new Button("Close",new ClickListener(){
    public void onClick(    Widget sender){
      hide();
    }
  }
));
  setWidget(outer);
}
