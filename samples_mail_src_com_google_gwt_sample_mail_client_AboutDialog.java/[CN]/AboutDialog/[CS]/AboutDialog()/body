{
  setText("About the Mail Sample");
  DockPanel outer=new DockPanel();
  outer.setSpacing(4);
  outer.add(new Image(LOGO_IMAGE),DockPanel.WEST);
  HorizontalPanel buttonPanel=new HorizontalPanel();
  buttonPanel.setHorizontalAlignment(HorizontalPanel.ALIGN_RIGHT);
  buttonPanel.add(new Button("Close",new ClickListener(){
    public void onClick(    Widget sender){
      hide();
    }
  }
));
  outer.add(buttonPanel,DockPanel.SOUTH);
  HTML text=new HTML("This sample application demonstrates the construction " + "of a complex user interface using GWT's built-in widgets.  Have a look " + "at the code to see how easy it is to build your own apps!");
  text.setStyleName("mail-AboutText");
  outer.add(text,DockPanel.CENTER);
  outer.setSpacing(8);
  setWidget(outer);
}
