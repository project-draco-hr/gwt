{
  String exceptionType=error.getExceptionType();
  String message=error.getMessage();
  throw new RuntimeException(exceptionType + ((exceptionType.length() != 0 && message.length() != 0) ? ": " : "") + error.getMessage()+ ((exceptionType.length() != 0 || message.length() != 0) ? ": " : "")+ error.getStackTraceString());
}
