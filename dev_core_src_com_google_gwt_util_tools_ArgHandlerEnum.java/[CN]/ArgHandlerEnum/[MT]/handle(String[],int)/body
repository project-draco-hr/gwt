{
  if (startIndex + 1 < args.length) {
    String value=args[startIndex + 1].trim().toUpperCase(Locale.ENGLISH);
    T mode=matchOption(value);
    if (mode == null) {
      System.err.println(value + " is not a valid option for " + getTag());
      System.err.println(getTag() + " value must be one of " + getFormattedOptionNames(", "," or ",optionsEnumClass)+ ".");
      return -1;
    }
    setValue(mode);
    return 1;
  }
  System.err.println("Missing argument for " + getTag() + " must be followed by one of "+ getFormattedOptionNames(", "," or ",optionsEnumClass)+ ".");
  return -1;
}
