{
  if (nodeInfo != null) {
    this.nodeInfo=nodeInfo;
    treeItem.addItem("loading...");
    treeItem.addValueChangeHandler(new ValueChangeHandler<Boolean>(){
      public void onValueChange(      ValueChangeEvent<Boolean> event){
        if (event.getValue()) {
          onOpen(tree,nodeInfo);
        }
 else {
          onClose();
        }
      }
    }
);
  }
}
