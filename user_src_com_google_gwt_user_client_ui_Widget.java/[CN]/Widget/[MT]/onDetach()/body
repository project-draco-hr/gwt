{
  if (!isAttached()) {
    throw new IllegalStateException("Should only call onDetach when the widget is attached to the browser's document");
  }
  try {
    onUnload();
  }
  finally {
    try {
      doDetachChildren();
    }
  finally {
      DOM.setEventListener(getElement(),null);
      attached=false;
    }
  }
}
