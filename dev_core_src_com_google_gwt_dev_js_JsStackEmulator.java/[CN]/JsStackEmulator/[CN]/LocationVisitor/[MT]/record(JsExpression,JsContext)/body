{
  if (ctx.isLvalue()) {
    return;
  }
 else   if (nodesInRefContext.contains(x)) {
    return;
  }
  SourceInfo locationToRecord=x.getSourceInfo();
  if (sameAsLastLocation(locationToRecord)) {
    return;
  }
  JsBinaryOperation comma=new JsBinaryOperation(locationToRecord,JsBinaryOperator.COMMA,assignLocation(locationToRecord),x);
  ctx.replaceMe(comma);
  setLastLocation(locationToRecord);
}
