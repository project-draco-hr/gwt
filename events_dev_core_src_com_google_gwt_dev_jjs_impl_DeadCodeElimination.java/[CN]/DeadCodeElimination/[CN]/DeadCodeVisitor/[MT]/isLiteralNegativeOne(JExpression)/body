{
  if (exp instanceof JValueLiteral) {
    JValueLiteral lit=(JValueLiteral)exp;
    if (isTypeIntegral(lit)) {
      if (toLong(lit) == -1) {
        return true;
      }
    }
    if (isTypeFloatOrDouble(lit)) {
      if (toDouble(lit) == -1.0) {
        return true;
      }
    }
  }
  return false;
}
