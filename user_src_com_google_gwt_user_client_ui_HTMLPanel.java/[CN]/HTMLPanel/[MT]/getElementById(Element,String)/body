{
  String elemId=DOM.getAttribute(elem,"id");
  if ((elemId != null) && elemId.equals(id)) {
    return elem;
  }
  Element child=DOM.getFirstChild(elem);
  while (child != null) {
    Element ret=getElementById(child,id);
    if (ret != null) {
      return ret;
    }
    child=DOM.getNextSibling(child);
  }
  return null;
}
