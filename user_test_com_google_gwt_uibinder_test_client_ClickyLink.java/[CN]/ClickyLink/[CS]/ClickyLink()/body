{
  setElement(DOM.createAnchor());
  getElement().setAttribute("href","#");
  sinkEvents(Event.ONCLICK);
  addDomHandler(new ClickHandler(){
    public void onClick(    ClickEvent event){
      if (popupText != null) {
        Window.alert(popupText);
      }
      event.preventDefault();
    }
  }
,ClickEvent.getType());
}
