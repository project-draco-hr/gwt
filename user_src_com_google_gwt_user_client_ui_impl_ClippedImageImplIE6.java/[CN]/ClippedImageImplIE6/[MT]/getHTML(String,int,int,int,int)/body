{
  String clipperStyle="overflow: hidden; width: " + width + "px; height: "+ height+ "px; padding: 0px";
  String imgStyle="filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='" + url + "',sizingMethod='crop'); margin-left: "+ -left+ "px; margin-top: "+ -top+ "px; border: none";
  String clippedImgHtml="<gwt:clipper style=\"" + clipperStyle + "\"><img src='about:blank' onerror='if(window.__gwt_transparentImgHandler)window.__gwt_transparentImgHandler(this);else this.src=\"clear.cache.gif\"' style=\""+ imgStyle+ "\" width="+ (left + width)+ " height="+ (top + height)+ " border='0'></gwt:clipper>";
  return clippedImgHtml;
}
