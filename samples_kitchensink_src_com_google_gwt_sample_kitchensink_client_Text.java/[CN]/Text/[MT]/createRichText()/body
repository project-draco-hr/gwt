{
  RichTextArea area=new RichTextArea();
  RichTextToolbar tb=new RichTextToolbar(area);
  VerticalPanel p=new VerticalPanel();
  p.add(tb);
  p.add(area);
  area.setHeight("14em");
  area.setWidth("100%");
  tb.setWidth("100%");
  p.setWidth("100%");
  DOM.setStyleAttribute(p.getElement(),"margin-right","4px");
  return p;
}
