{
  List<String> actualMessages=new ArrayList<String>();
  for (  ConstraintViolation<?> violation : violations) {
    actualMessages.add(violation.getMessage());
  }
  assertTrue(actualMessages.size() == messages.length,"Wrong number or error messages. Expected: " + messages.length + " Actual: "+ actualMessages.size());
  for (  String expectedMessage : messages) {
    assertTrue(actualMessages.contains(expectedMessage),"The message '" + expectedMessage + "' should have been in the list of actual messages: "+ actualMessages);
    actualMessages.remove(expectedMessage);
  }
  assertTrue(actualMessages.isEmpty(),"Actual messages contained more messages as specified expected messages");
}
