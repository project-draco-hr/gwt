{
{
    int i;
    for (i=0; i < 10; ++i) {
    }
    assertEquals(i,10);
  }
{
    int i, c;
    for (i=0, c=10; i < c; ++i) {
    }
    assertEquals(i,10);
    assertEquals(c,10);
  }
{
    int j=0;
    for (int i=0; i < 10; ++i) {
      ++j;
    }
    assertEquals(j,10);
  }
{
    int j=0;
    for (int i=0, c=10; i < c; ++i) {
      ++j;
    }
    assertEquals(j,10);
  }
}
