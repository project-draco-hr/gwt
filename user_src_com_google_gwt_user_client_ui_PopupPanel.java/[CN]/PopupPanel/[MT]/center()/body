{
  boolean initiallyShowing=showing;
  if (!initiallyShowing) {
    setVisible(false);
    show();
  }
  int left=(Window.getClientWidth() - getOffsetWidth()) / 2;
  int top=(Window.getClientHeight() - getOffsetHeight()) / 2;
  setPopupPosition(Window.getScrollLeft() + left,Window.getScrollTop() + top);
  if (!initiallyShowing) {
    setVisible(true);
  }
}
