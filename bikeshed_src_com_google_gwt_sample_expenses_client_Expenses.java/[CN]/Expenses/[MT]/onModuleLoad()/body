{
  RootLayoutPanel root=RootLayoutPanel.get();
  final Shell shell=new Shell();
  final EmployeeList employees=new EmployeeList(shell.users);
  root.add(shell);
  employees.setListener(new EmployeeList.Listener(){
    public void onEmployeeSelected(    Employee e){
      requestFactory.reportRequest().findReportsByEmployee(e.slot(Employee.ID)).forProperty(Report.CREATED).forProperty(Report.PURPOSE).to(shell).fire();
    }
  }
);
  requestFactory.employeeRequest().findAllEmployees().forProperty(Employee.DISPLAY_NAME).forProperty(Employee.USER_NAME).to(employees).fire();
}
