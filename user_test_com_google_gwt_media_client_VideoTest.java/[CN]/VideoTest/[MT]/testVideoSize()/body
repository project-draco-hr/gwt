{
  if (video == null) {
    return;
  }
  int waitMillis=5000;
  delayTestFinish(3 * waitMillis);
  final VideoElement element=video.getVideoElement();
  element.play();
  new Timer(){
    @Override public void run(){
      assertEquals("Element = " + getElementState() + ", expected width "+ videoWidth,videoWidth,element.getVideoWidth());
      assertEquals("Element = " + getElementState() + ", expected height "+ videoHeight,videoHeight,element.getVideoHeight());
      finishTest();
    }
  }
.schedule(waitMillis);
}
