{
  if (size < minSize) {
    size=minSize;
  }
  LayoutData layout=(LayoutData)target.getLayoutData();
  if (size == layout.size) {
    return;
  }
  layout.size=size;
  if (layoutCommand == null) {
    layoutCommand=new Command(){
      public void execute(){
        layoutCommand=null;
        forceLayout();
      }
    }
;
    Scheduler.get().scheduleDeferred(layoutCommand);
  }
}
