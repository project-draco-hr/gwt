{
  JExpression typeNameLit;
  String typeName;
  if (type instanceof JArrayType) {
    typeName=type.getJsniSignatureName().replace('/','.');
  }
 else {
    typeName=type.getName();
  }
  String className=getClassName(typeName);
  String packageName=getPackageName(typeName);
  if (packageName.length() > 0) {
    typeNameLit=new JBinaryOperation(program,null,program.getTypeJavaLangString(),JBinaryOperator.ADD,program.getLiteralString(packageName),program.getLiteralString(className));
  }
 else {
    typeNameLit=program.getLiteralString(typeName);
  }
  return typeNameLit;
}
