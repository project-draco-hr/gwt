{
  super(program);
  refType=type;
  JNewInstance classAlloc=new JNewInstance(program,null,program.getTypeJavaLangClass());
  JMethodCall call=new JMethodCall(program,null,classAlloc,program.getIndexedMethod("Class.Class"));
  call.getArgs().add(getTypeNameLit(program,type));
  call.getArgs().add(getTypeBitsLit(program,type));
  classObjectAllocation=call;
}
