{
  int tzOffset=date.getTimezoneOffset();
  int tzAbsOffset=Math.abs(tzOffset);
  int tzAbsOffsetHrs=tzAbsOffset / 60;
  int tzAbsOffsetMins=tzAbsOffset % 60;
  String tzOffsetStr=(tzOffset < 0 ? "+" : "-") + (tzAbsOffsetHrs < 10 ? "0" : "") + Integer.toString(tzAbsOffsetHrs)+ (useColon ? ":" : "")+ (tzAbsOffsetMins < 10 ? "0" : "")+ Integer.toString(tzAbsOffsetMins);
  return tzOffsetStr;
}
