{
  int imageWidth=IMAGE_WIDTH;
  sb.append("<div style='position:relative;padding-right:");
  sb.append(imageWidth);
  sb.append("px;'>");
  if (sorted) {
    if (reverseSort) {
      sb.append(DOWN_ARROW);
    }
 else {
      sb.append(UP_ARROW);
    }
  }
 else {
    sb.append("<div style='position:absolute;display:none;'></div>");
  }
  sb.append("<div>");
  sb.append(text);
  sb.append("</div></div>");
}
