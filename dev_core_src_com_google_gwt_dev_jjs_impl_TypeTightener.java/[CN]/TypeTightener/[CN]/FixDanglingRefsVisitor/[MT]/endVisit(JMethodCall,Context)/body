{
  JExpression instance=x.getInstance();
  JMethod method=x.getTarget();
  boolean isStatic=method.isStatic();
  boolean isStaticImpl=program.isStaticImpl(method);
  if (isStatic && !isStaticImpl && instance != null) {
    if (!instance.hasSideEffects()) {
      JMethodCall newCall=new JMethodCall(program,x.getSourceInfo(),null,x.getTarget());
      newCall.getArgs().addAll(x.getArgs());
      ctx.replaceMe(newCall);
    }
  }
 else   if (!isStatic && instance.getType() == typeNull) {
    if (!instance.hasSideEffects()) {
      instance=program.getLiteralNull();
    }
    JMethodCall newCall=new JMethodCall(program,x.getSourceInfo(),instance,program.getNullMethod());
    ctx.replaceMe(newCall);
  }
 else   if (isStaticImpl && x.getArgs().size() > 0 && x.getArgs().get(0).getType() == typeNull) {
    instance=x.getArgs().get(0);
    if (!instance.hasSideEffects()) {
      instance=program.getLiteralNull();
    }
    JMethodCall newCall=new JMethodCall(program,x.getSourceInfo(),instance,program.getNullMethod());
    ctx.replaceMe(newCall);
  }
}
