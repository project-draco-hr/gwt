{
  JExpression instance=x.getInstance();
  JField field=x.getField();
  if (field.isStatic() && instance != null) {
    if (!instance.hasSideEffects()) {
      JFieldRef fieldRef=new JFieldRef(x.getSourceInfo(),null,field,x.getEnclosingType());
      ctx.replaceMe(fieldRef);
    }
  }
 else   if (isNullReference(field,instance) && field != program.getNullField()) {
    ctx.replaceMe(Pruner.transformToNullFieldRef(x,program));
  }
}
