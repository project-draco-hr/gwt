{
  assert(name != null);
  assert(enclosingType != null);
  assert(type != null);
  boolean isSpecialField=specialTypes.contains(enclosingType);
  if (isSpecialField) {
    hasInitializer=true;
  }
  String sname=String.valueOf(name);
  JField x=new JField(this,info,sname,enclosingType,type,isStatic,isFinal,hasInitializer);
  if (isSpecialField) {
    specialFields.put(enclosingType.getShortName() + '.' + sname,x);
  }
  enclosingType.fields.add(x);
  return x;
}
