{
  int idx=nameList.indexOf(name);
  while (idx != -1) {
    if (idx == 0 || nameList.charAt(idx - 1) == ' ') {
      int last=idx + name.length();
      int lastPos=nameList.length();
      if ((last == lastPos) || ((last < lastPos) && (nameList.charAt(last) == ' '))) {
        break;
      }
    }
    idx=nameList.indexOf(name,idx + 1);
  }
  return idx;
}
