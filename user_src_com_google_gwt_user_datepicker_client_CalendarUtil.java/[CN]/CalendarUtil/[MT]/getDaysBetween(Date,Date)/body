{
  if (hasTime(start)) {
    start=copyDate(start);
    resetTime(start);
  }
  if (hasTime(finish)) {
    finish=copyDate(finish);
    resetTime(finish);
  }
  long aTime=start.getTime();
  long bTime=finish.getTime();
  long adjust=60 * 60 * 1000;
  adjust=(bTime > aTime) ? adjust : -adjust;
  return (int)((bTime - aTime + adjust) / (24 * 60 * 60* 1000));
}
