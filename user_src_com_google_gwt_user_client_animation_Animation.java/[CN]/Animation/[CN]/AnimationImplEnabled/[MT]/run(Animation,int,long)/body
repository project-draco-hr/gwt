{
  anim.cancel();
  anim.duration=duration;
  anim.startTime=startTime;
  if (animations == null) {
    animations=new ArrayList<Animation>();
    animationTimer=new Timer(){
      @Override public void run(){
        updateAnimations();
      }
    }
;
  }
  animations.add(anim);
  if (animations.size() == 1) {
    animationTimer.schedule(DEFAULT_FRAME_DELAY);
  }
}
