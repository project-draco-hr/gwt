{
  Date oldValue=value;
  if (oldValue != null) {
    removeStyleFromDates(css().dayIsValue(),oldValue);
  }
  value=CalendarUtil.copyDate(newValue);
  if (value != null) {
    addStyleToDates(css().dayIsValue(),value);
  }
  if (fireEvents) {
    DateChangeEvent.fireIfNotEqualDates(this,oldValue,newValue);
  }
}
