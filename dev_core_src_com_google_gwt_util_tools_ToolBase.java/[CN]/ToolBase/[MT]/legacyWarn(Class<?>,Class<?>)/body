{
  if (System.getProperty(PROPERTY_NOWARN_LEGACY_TOOLS) == null) {
    System.err.println("WARNING: '" + legacy.getName() + "' is deprecated and will be removed in a future release.");
    System.err.println("Use '" + replacement.getName() + "' instead.");
    System.err.println("(To disable this warning, pass -D" + PROPERTY_NOWARN_LEGACY_TOOLS + " as a JVM arg.)");
  }
}
