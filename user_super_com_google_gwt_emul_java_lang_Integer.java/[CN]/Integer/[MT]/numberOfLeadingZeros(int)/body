{
  if (i < 0) {
    return 0;
  }
 else   if (i == 0) {
    return SIZE;
  }
 else {
    int y, m, n;
    y=-(i >> 16);
    m=(y >> 16) & 16;
    n=16 - m;
    i=i >> m;
    y=i - 0x100;
    m=(y >> 16) & 8;
    n+=m;
    i<<=m;
    y=i - 0x1000;
    m=(y >> 16) & 4;
    n+=m;
    i<<=m;
    y=i - 0x4000;
    m=(y >> 16) & 2;
    n+=m;
    i<<=m;
    y=i >> 14;
    m=y & ~(y >> 1);
    return n + 2 - m;
  }
}
