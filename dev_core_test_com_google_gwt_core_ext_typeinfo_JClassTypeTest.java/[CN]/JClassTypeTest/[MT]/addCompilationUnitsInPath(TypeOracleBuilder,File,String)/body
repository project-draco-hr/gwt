{
  File pkgPath=new File(sourcePathEntry,pkgName.replace('.','/'));
  File[] files=pkgPath.listFiles();
  if (files == null) {
    return;
  }
  for (int i=0; i < files.length; i++) {
    File file=files[i];
    if (file.isFile()) {
      if (file.getName().endsWith(".java")) {
        URL location=file.toURL();
        CompilationUnitProvider cup=new URLCompilationUnitProvider(location,pkgName);
        builder.addCompilationUnit(cup);
      }
    }
 else {
      addCompilationUnitsInPath(builder,sourcePathEntry,pkgName + file.getName());
    }
  }
}
