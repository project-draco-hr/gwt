{
  if (file.isDirectory()) {
    File[] children=file.listFiles();
    if (children != null) {
      for (int i=0; i < children.length; i++) {
        if (!recursiveDelete(children[i]))         return false;
      }
    }
  }
  if (!file.delete()) {
    System.err.println("Unable to delete " + file.getAbsolutePath());
    return false;
  }
  return true;
}
