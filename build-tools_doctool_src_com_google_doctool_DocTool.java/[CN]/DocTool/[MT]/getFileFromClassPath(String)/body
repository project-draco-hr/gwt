{
  InputStream in=null;
  try {
    in=getClass().getClassLoader().getResourceAsStream(filename);
    try {
      if (in == null) {
        fErr.println("Cannot find file: " + filename);
        System.exit(-1);
      }
      StringWriter sw=new StringWriter();
      int ch;
      while ((ch=in.read()) != -1) {
        sw.write(ch);
      }
      return sw.toString();
    }
  finally {
      if (in != null) {
        in.close();
      }
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
