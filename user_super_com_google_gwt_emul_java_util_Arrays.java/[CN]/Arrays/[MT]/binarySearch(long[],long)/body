{
  int low=0;
  int high=sortedArray.length - 1;
  while (low <= high) {
    final int mid=low + ((high - low) / 2);
    final long midVal=sortedArray[mid];
    if (midVal < key) {
      low=mid + 1;
    }
 else     if (midVal > key) {
      high=mid - 1;
    }
 else {
      return mid;
    }
  }
  return -low - 1;
}
