{
  int i=name.length() - 1;
  while (i >= 0) {
    int dot=name.lastIndexOf('.',i);
    String pkgName="";
    String typeName=name;
    if (dot != -1) {
      pkgName=name.substring(0,dot);
      typeName=name.substring(dot + 1);
      i=dot - 1;
    }
 else {
      i=-1;
    }
    JClassType result=findType(pkgName,typeName);
    if (result != null) {
      return result;
    }
  }
  return null;
}
