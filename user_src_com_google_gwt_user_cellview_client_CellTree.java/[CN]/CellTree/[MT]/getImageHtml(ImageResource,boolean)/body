{
  StringBuilder classesBuilder=new StringBuilder(style.itemImage());
  if (isTop) {
    classesBuilder.append(" ").append(style.topItemImage());
  }
  String direction;
  if (LocaleInfo.getCurrentLocale().isRTL()) {
    direction="right";
  }
 else {
    direction="left";
  }
  return template.image(classesBuilder.toString(),direction,res.getHeight(),res.getWidth(),res.getURL());
}
