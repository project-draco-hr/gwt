{
  initWidget(tb);
  sinkEvents(Event.FOCUSEVENTS);
  tb.addFocusListener(new FocusListener(){
    @Override public void onLostFocus(    Widget sender){
      widgetLostFocusFired=true;
    }
    @Override public void onFocus(    Widget sender){
      widgetFocusFired=true;
    }
  }
);
  tb.addFocusHandler(new FocusHandler(){
    @Override public void onFocus(    FocusEvent event){
      widgetFocusHandlerFired=true;
    }
  }
);
  tb.addBlurHandler(new BlurHandler(){
    @Override public void onBlur(    BlurEvent event){
      widgetBlurHandlerFired=true;
    }
  }
);
}
