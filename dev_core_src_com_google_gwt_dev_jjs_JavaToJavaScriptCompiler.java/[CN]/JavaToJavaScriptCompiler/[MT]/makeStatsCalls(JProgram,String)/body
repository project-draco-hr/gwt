{
  JMethod isStatsAvailableMethod=program.getIndexedMethod("Stats.isStatsAvailable");
  JMethod onModuleStartMethod=program.getIndexedMethod("Stats.onModuleStart");
  JMethodCall availableCall=new JMethodCall(program,null,null,isStatsAvailableMethod);
  JMethodCall onModuleStartCall=new JMethodCall(program,null,null,onModuleStartMethod);
  onModuleStartCall.getArgs().add(program.getLiteralString(mainClassName));
  JBinaryOperation amp=new JBinaryOperation(program,null,program.getTypePrimitiveBoolean(),JBinaryOperator.AND,availableCall,onModuleStartCall);
  return amp.makeStatement();
}
