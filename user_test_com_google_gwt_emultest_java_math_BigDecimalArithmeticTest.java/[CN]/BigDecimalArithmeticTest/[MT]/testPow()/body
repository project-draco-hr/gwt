{
  String a="123121247898748298842980";
  int aScale=10;
  int exp=10;
  String c="8004424019039195734129783677098845174704975003788210729597" + "4875206425711159855030832837132149513512555214958035390490" + "798520842025826.594316163502809818340013610490541783276343"+ "6514490899700151256484355936102754469438371850240000000000";
  int cScale=100;
  BigDecimal aNumber=new BigDecimal(new BigInteger(a),aScale);
  BigDecimal result=aNumber.pow(exp);
  assertEquals("incorrect value",c,result.toString());
  assertEquals("incorrect scale",cScale,result.scale());
}
