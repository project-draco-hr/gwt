{
  if (value.equals("auto")) {
    port=0;
  }
 else {
    try {
      port=Integer.parseInt(value);
    }
 catch (    NumberFormatException e) {
      String msg="A port must be an integer or \"auto\"";
      getTopLogger().log(TreeLogger.ERROR,msg,null);
      return false;
    }
  }
  return true;
}
