{
  textDir=dir;
  if (isElementInline) {
    isSpanWrapped=true;
    getElement().setInnerHTML(BidiFormatter.getInstanceForCurrentLocale(true).spanWrapWithKnownDir(dir,content,isHtml));
  }
 else {
    isSpanWrapped=false;
    BidiUtils.setDirectionOnElement(getElement(),dir);
    setInnerTextOrHtml(content,isHtml);
  }
  updateHorizontalAlignment();
}
