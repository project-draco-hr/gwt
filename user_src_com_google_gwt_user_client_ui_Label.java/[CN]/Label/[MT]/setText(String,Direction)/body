{
  textDir=dir;
  if (isElementInline) {
    isSpanWrapped=true;
    getElement().setInnerHTML(BidiFormatter.getInstanceForCurrentLocale(true).spanWrapWithKnownDir(dir,text,false));
  }
 else {
    isSpanWrapped=false;
    BidiUtils.setDirectionOnElement(getElement(),dir);
    getElement().setInnerText(text);
  }
  updateHorizontalAlignment();
}
