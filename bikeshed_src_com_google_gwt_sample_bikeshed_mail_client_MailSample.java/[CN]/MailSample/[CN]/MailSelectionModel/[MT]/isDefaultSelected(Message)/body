{
switch (type) {
case NONE:
    return false;
case ALL:
  return true;
case READ:
return object.isRead();
case UNREAD:
return !object.isRead();
case SENDER:
if (search == null || search.length() == 0) {
return false;
}
return object.getSender().toLowerCase().contains(search);
case SUBJECT:
if (search == null || search.length() == 0) {
return false;
}
return object.getSubject().toLowerCase().contains(search);
default :
throw new IllegalStateException("type = " + type);
}
}
