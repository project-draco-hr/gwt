{
  boolean encodingOkay=false;
  String characterEncoding=request.getCharacterEncoding();
  if (characterEncoding != null) {
    if (characterEncoding.toLowerCase().indexOf(CHARSET_UTF8.toLowerCase()) != -1) {
      encodingOkay=true;
    }
  }
  if (!encodingOkay) {
    throw new ServletException("Character Encoding is '" + (characterEncoding == null ? "(null)" : characterEncoding) + "'.  Expected '"+ EXPECTED_CHARSET+ "'");
  }
}
