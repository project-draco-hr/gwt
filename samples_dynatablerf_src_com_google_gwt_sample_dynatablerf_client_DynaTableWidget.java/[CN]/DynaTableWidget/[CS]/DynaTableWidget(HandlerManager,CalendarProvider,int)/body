{
  this.provider=provider;
  Binder binder=GWT.create(Binder.class);
  initWidget(binder.createAndBindUi(this));
  initTable(rowCount);
  eventBus.addHandler(PersonProxyChanged.TYPE,new PersonProxyChanged.Handler(){
    public void onPersonChanged(    PersonProxyChanged event){
      log.info("Look who changed, time to repaint some things: " + event.getRecord());
    }
  }
);
}
