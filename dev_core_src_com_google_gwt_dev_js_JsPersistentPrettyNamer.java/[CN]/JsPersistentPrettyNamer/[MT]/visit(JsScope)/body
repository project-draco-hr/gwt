{
  for (  JsScope child : scope.getChildren()) {
    visit(child);
  }
  for (  JsName name : scope.getAllNames()) {
    if (!name.isObfuscatable()) {
      String prettyIdent=name.getIdent();
      if (prettyIdent.endsWith(RESERVED_IDENT_SUFFIX)) {
        throw new IllegalNameException("Identifier " + prettyIdent + " ends with "+ RESERVED_IDENT_SUFFIX+ ". This is not allowed since that suffix is used to separate obfuscatable and "+ "nonobfuscatable names in per-file compiles.");
      }
      name.setShortIdent(prettyIdent);
      continue;
    }
    name.setShortIdent(getOrCreatePrettyIdent(name));
  }
}
