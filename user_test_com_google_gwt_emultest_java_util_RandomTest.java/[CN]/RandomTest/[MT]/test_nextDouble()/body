{
  double lastNum=r.nextDouble();
  double nextNum;
  boolean someDifferent=false;
  boolean inRange=true;
  for (int counter=0; counter < 100; counter++) {
    nextNum=r.nextDouble();
    if (nextNum != lastNum) {
      someDifferent=true;
    }
    if (!(0 <= nextNum && nextNum < 1.0)) {
      inRange=false;
    }
    lastNum=nextNum;
  }
  assertTrue("Calling nextDouble 100 times resulted in same number",someDifferent);
  assertTrue("Calling nextDouble resulted in a number out of range [0,1)",inRange);
}
