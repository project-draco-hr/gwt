{
  SourceInfo sourceInfo=x.getSourceInfo();
  JMethodCall call=new JMethodCall(sourceInfo,null,initDim,arrayType);
  JLiteral classLit=x.getClassLiteral();
  JExpression castableTypeMap=getOrCreateCastMap(sourceInfo,arrayType);
  JRuntimeTypeReference arrayElementRuntimeTypeReference=getElementRuntimeTypeReference(sourceInfo,arrayType);
  JType elementType=arrayType.getElementType();
  JIntLiteral elementTypeClass=JIntLiteral.get(getTypeClass(arrayType.getElementType()));
  JExpression dim=x.dims.get(0);
  call.addArgs(classLit,castableTypeMap,arrayElementRuntimeTypeReference,dim,elementTypeClass);
  ctx.replaceMe(call);
}
