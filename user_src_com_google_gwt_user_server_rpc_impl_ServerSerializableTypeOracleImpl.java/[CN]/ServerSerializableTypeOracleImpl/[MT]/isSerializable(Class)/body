{
  if (instanceType.isArray()) {
    return isSerializable(instanceType.getComponentType());
  }
  if (instanceType.isPrimitive()) {
    return true;
  }
  if (IsSerializable.class.isAssignableFrom(instanceType) || Serializable.class.isAssignableFrom(instanceType)) {
    return true;
  }
  return hasCustomFieldSerializer(instanceType) != null;
}
