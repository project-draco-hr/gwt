{
  int startLine=Util.getLineNumber(stmt.sourceStart,currentSeparatorPositions,0,currentSeparatorPositions.length - 1);
  SourceInfo toReturn=program.createSourceInfo(stmt.sourceStart,stmt.sourceEnd,startLine,currentFileName);
  if (enclosing != null) {
    toReturn.copyMissingCorrelationsFrom(enclosing.getSourceInfo());
  }
  return toReturn;
}
