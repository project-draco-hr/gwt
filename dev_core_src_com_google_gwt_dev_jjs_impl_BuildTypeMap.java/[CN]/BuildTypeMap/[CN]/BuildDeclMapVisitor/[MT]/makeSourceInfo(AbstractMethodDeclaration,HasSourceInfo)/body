{
  int startLine=Util.getLineNumber(methodDecl.sourceStart,currentSeparatorPositions,0,currentSeparatorPositions.length - 1);
  SourceInfo toReturn=program.createSourceInfo(methodDecl.sourceStart,methodDecl.bodyEnd,startLine,currentFileName);
  if (enclosing != null) {
    toReturn.copyMissingCorrelationsFrom(enclosing.getSourceInfo());
  }
  return toReturn;
}
