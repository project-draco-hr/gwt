{
  groups=addDefaultGroupWhenEmpty(groups);
  try {
    return validateGroups(context,object,null,true,false,propertyName,null,groups);
  }
 catch (  IllegalArgumentException e) {
    throw e;
  }
catch (  ValidationException e) {
    throw e;
  }
catch (  Exception e) {
    throw new ValidationException("Error validating property " + propertyName + " of "+ object.getClass(),e);
  }
}
