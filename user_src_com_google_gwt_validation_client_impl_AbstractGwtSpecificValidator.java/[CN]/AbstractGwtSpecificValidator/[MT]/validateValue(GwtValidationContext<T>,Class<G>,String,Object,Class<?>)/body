{
  groups=addDefaultGroupWhenEmpty(groups);
  try {
    return validateGroups(context,null,beanType,false,true,propertyName,value,groups);
  }
 catch (  IllegalArgumentException e) {
    throw e;
  }
catch (  ValidationException e) {
    throw e;
  }
catch (  Exception e) {
    throw new ValidationException("Error validating property " + propertyName + " with value "+ value+ " of "+ beanType,e);
  }
}
