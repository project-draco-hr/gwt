{
  StringBuilder buf=new StringBuilder();
  StringGenerator gen=StringGenerator.create(buf,true);
  gen.appendExpression("name",false,false,true);
  gen.appendStringLiteral(" says hello");
  gen.completeString();
  assertEquals("new com.google.gwt.safehtml.shared.SafeHtmlBuilder().appendEscaped(" + "String.valueOf(name)).appendHtmlConstant(\" says hello\").toSafeHtml()",buf.toString());
}
