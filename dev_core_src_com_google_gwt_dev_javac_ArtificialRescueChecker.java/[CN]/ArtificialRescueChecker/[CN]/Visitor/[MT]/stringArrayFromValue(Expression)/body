{
  if (value instanceof StringLiteral) {
    return new String[]{value.constant.stringValue()};
  }
 else   if (value instanceof ArrayInitializer) {
    ArrayInitializer init=(ArrayInitializer)value;
    String[] toReturn=new String[init.expressions == null ? 0 : init.expressions.length];
    for (int i=0; i < toReturn.length; i++) {
      toReturn[i]=init.expressions[i].constant.stringValue();
    }
    return toReturn;
  }
 else {
    throw new InternalCompilerException("Unhandled value type " + value.getClass().getName());
  }
}
