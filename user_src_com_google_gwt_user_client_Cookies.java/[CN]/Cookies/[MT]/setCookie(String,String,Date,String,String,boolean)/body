{
  if (uriEncoding) {
    uriEncode(name);
    uriEncode(value);
  }
 else   if (!isValidCookieName(name) || !isValidCookieValue(value)) {
    throw new IllegalArgumentException("Illegal cookie format.");
  }
  setCookieImpl(name,value,(expires == null) ? 0 : expires.getTime(),domain,path,secure);
}
