{
  if (styleName == null) {
    throw new IllegalStateException("Cannot set the base style name to null");
  }
  if (curFace != null) {
    super.removeStyleName(getCSSStyleName());
    baseStyleName=styleName;
    super.addStyleName(getCSSStyleName());
  }
 else {
    baseStyleName=styleName;
  }
}
