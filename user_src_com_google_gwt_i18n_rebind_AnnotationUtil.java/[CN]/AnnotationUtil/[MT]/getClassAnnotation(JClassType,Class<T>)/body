{
  if (clazz == null) {
    return null;
  }
  T annot=clazz.getAnnotation(annotationClass);
  if (annot == null) {
    annot=getClassAnnotation(clazz.getSuperclass(),annotationClass);
    if (annot != null) {
      return annot;
    }
    for (    JClassType intf : clazz.getImplementedInterfaces()) {
      annot=getClassAnnotation(intf,annotationClass);
      if (annot != null) {
        return annot;
      }
    }
  }
  return annot;
}
