{
  if (binding instanceof LocalVariableBinding && ((LocalVariableBinding)binding).constant() != Constant.NotAConstant) {
    return true;
  }
  if (!(binding instanceof FieldBinding)) {
    return false;
  }
  FieldBinding fieldBinding=(FieldBinding)binding;
  return (compilerContext.getOptions().shouldJDTInlineCompileTimeConstants() || isBinaryBinding(fieldBinding.declaringClass)) && isCompileTimeConstant(fieldBinding);
}
