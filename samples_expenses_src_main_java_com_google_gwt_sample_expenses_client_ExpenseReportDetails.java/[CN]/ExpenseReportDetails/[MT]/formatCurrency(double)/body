{
  boolean negative=amount < 0;
  if (negative) {
    amount=-amount;
  }
  int dollars=(int)amount;
  int cents=(int)((amount * 100) % 100);
  StringBuilder sb=new StringBuilder();
  if (negative) {
    sb.append("-");
  }
  sb.append("$");
  sb.append(dollars);
  sb.append('.');
  if (cents < 10) {
    sb.append('0');
  }
  sb.append(cents);
  return sb.toString();
}
