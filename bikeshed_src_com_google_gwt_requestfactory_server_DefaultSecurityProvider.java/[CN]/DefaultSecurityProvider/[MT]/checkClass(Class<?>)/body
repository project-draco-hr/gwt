{
  Service service=clazz.getAnnotation(Service.class);
  if (service == null) {
    throw new SecurityException("Class " + clazz.getName() + " does not have a @Service annotation.");
  }
  try {
    Class.forName(service.value().getCanonicalName());
  }
 catch (  ClassNotFoundException e) {
    throw new SecurityException("Class " + service.value() + " from @Service annotation on "+ clazz+ " cannot be loaded.");
  }
}
