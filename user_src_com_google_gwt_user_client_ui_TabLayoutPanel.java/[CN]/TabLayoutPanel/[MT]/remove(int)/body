{
  if ((index < 0) || (index >= getWidgetCount())) {
    return false;
  }
  tabBar.remove(index);
  panel.remove(children.get(index));
  children.remove(index);
  tabs.remove(index);
  if (index == selectedIndex) {
    selectedIndex=-1;
    if (getWidgetCount() > 0) {
      selectTab(0);
    }
  }
 else   if (index < selectedIndex) {
    --selectedIndex;
  }
  return true;
}
