{
  EntityManager em=entityManager();
  try {
    EntityCounter counter=em.find(EntityCounter.class,1);
    if (counter == null) {
      counter=new EntityCounter();
      counter.clear();
      em.persist(counter);
    }
    return counter;
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
 finally {
    em.close();
  }
}
