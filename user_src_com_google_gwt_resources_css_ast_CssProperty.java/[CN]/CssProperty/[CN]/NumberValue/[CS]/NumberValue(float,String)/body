{
  this.value=value;
  this.units=units;
  String s;
  int i=(int)value;
  if (i == value) {
    s=String.valueOf(i);
  }
 else {
    s=String.valueOf(value);
  }
  if (units != null && value != 0) {
    css=s + units;
    expression='"' + s + Generator.escape(units)+ '"';
  }
 else   if (value == 0) {
    css="0";
    expression="\"0\"";
  }
 else {
    css=s;
    expression='"' + s + '"';
  }
}
