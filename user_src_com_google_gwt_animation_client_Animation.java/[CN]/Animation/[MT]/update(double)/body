{
  boolean finished=curTime >= startTime + duration;
  if (started && !finished) {
    double progress=(curTime - startTime) / duration;
    onUpdate(interpolate(progress));
    return false;
  }
  if (!started && curTime >= startTime) {
    started=true;
    onStart();
  }
  if (finished) {
    onComplete();
    started=false;
    running=false;
    return true;
  }
  return false;
}
