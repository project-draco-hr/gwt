{
  HorizontalPanel hPanel=new HorizontalPanel();
  hPanel.setSpacing(4);
  hPanel.add(textBox);
  if (addSelection) {
    final Label label=new Label(constants.cwBasicTextSelected() + ": 0, 0");
    textBox.addKeyboardListener(new KeyboardListenerAdapter(){
      @Override public void onKeyUp(      Widget sender,      char keyCode,      int modifiers){
        updateSelectionLabel(textBox,label);
      }
    }
);
    textBox.addClickListener(new ClickListener(){
      public void onClick(      Widget sender){
        updateSelectionLabel(textBox,label);
      }
    }
);
    hPanel.add(label);
  }
  return hPanel;
}
